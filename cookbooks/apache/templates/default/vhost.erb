#vhost template file

<VirtualHost *:<%= @port %> >
	ServerName <%= @domain %>
	DocumentRoot <%= @document_root %>
	
	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>
	<Directory <%= @document_root %>>
	 Options Indexes FollowSymLinks Multiviews
	 AllowOverride None
	 Require all granted
	</Directory>
</VirtualHost>
